<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.IntroFragment">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/vgl_label_right"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.99"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_label_master"
            android:text="圈主"
            android:textSize="@dimen/item_intro_label_textsize"
            android:layout_marginTop="@dimen/item_interval_text"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/vgl_label_right"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_master"
            android:text="圈主"
            android:textSize="@dimen/item_intro_content_textsize"
            android:layout_marginTop="@dimen/item_interval_text"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/vgl_label_right"
            app:layout_constraintTop_toBottomOf="@id/tv_intro_label_master"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_label_desc"
            android:text="圈子简介"
            android:textSize="@dimen/item_intro_label_textsize"
            android:layout_marginTop="@dimen/item_interval_text"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/vgl_label_right"
            app:layout_constraintTop_toBottomOf="@id/tv_intro_master"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_desc"
            android:text="圈子简介"
            android:textSize="@dimen/item_intro_content_textsize"
            android:layout_marginTop="@dimen/item_interval_text"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/vgl_label_right"
            app:layout_constraintTop_toBottomOf="@id/tv_intro_label_desc"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_label_time"
            android:text="打卡时间"
            android:textSize="@dimen/item_intro_label_textsize"
            android:layout_marginTop="@dimen/item_interval_text"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/vgl_label_right"
            app:layout_constraintTop_toBottomOf="@id/tv_intro_desc"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_time"
            android:text="打卡时间"
            android:textSize="@dimen/item_intro_content_textsize"
            android:layout_marginTop="@dimen/item_interval_text"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/vgl_label_right"
            app:layout_constraintTop_toBottomOf="@id/tv_intro_label_time"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_label_rule"
            android:text="打卡规则"
            android:textSize="@dimen/item_intro_label_textsize"
            android:layout_marginTop="@dimen/item_interval_text"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/vgl_label_right"
            app:layout_constraintTop_toBottomOf="@id/tv_intro_time"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_rule"
            android:text="打卡规则"
            android:textSize="@dimen/item_intro_content_textsize"
            android:layout_marginTop="@dimen/item_interval_text"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/vgl_label_right"
            app:layout_constraintTop_toBottomOf="@id/tv_intro_label_rule"
            />

    />


</androidx.constraintlayout.widget.ConstraintLayout>