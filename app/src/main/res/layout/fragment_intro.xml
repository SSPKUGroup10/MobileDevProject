<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.IntroFragment">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/vgl_label_right"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.99"
        />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/hgl_split"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35"
            />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/hgl_split2"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_label_master"
            android:text="圈主"
            android:gravity="center_vertical|left"

            android:textSize="@dimen/item_intro_label_textsize"
            android:layout_marginTop="@dimen/item_interval_text"

            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:paddingLeft="@dimen/edittext_padding_left"
            android:drawablePadding="@dimen/edittext_padding_left"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_intro_master"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_master"
            tools:text="圈主"
            android:layout_marginTop="@dimen/item_interval_text"
            android:gravity="center_vertical|right"

            android:textSize="@dimen/item_intro_label_textsize"
            android:paddingRight="@dimen/edittext_padding_left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/hgl_split"

            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightgrey"
            android:layout_marginTop="@dimen/intro_splitline"
            android:layout_marginBottom="@dimen/intro_splitline"
            android:id="@+id/view_01"


            app:layout_constraintTop_toBottomOf="@id/tv_intro_master"
            app:layout_constraintLeft_toLeftOf="parent"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_label_desc"
            android:text="圈子简介"
            android:gravity="center_vertical|left"

            android:textSize="@dimen/item_intro_label_textsize"
            android:layout_marginTop="@dimen/item_interval_text"


            android:drawableLeft="@drawable/ic_event_note_black_24dp"
            android:paddingLeft="@dimen/edittext_padding_left"
            android:drawablePadding="@dimen/edittext_padding_left"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_01"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_desc"
            android:text="圈子简介圈子简介圈子简介圈子简介圈子简介圈子简介圈子简介"
            android:layout_marginTop="@dimen/item_interval_text"

            android:gravity="center_vertical|right"
            android:textSize="@dimen/item_intro_label_textsize"
            android:paddingRight="@dimen/edittext_padding_left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/hgl_split"

            app:layout_constraintTop_toBottomOf="@id/view_01"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightgrey"
            android:layout_marginTop="@dimen/intro_splitline"
            android:layout_marginBottom="@dimen/intro_splitline"
            android:id="@+id/view_02"


            app:layout_constraintTop_toBottomOf="@id/tv_intro_desc"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_label_time"
            android:text="打卡时间"
            android:gravity="center_vertical|left"

            android:textSize="@dimen/item_intro_label_textsize"
            android:layout_marginTop="@dimen/item_interval_text"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:paddingLeft="@dimen/edittext_padding_left"
            android:drawablePadding="@dimen/edittext_padding_left"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_02"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_time"
            android:text="打卡时间"
            android:layout_marginTop="@dimen/item_interval_text"

            android:gravity="center_vertical|right"
            android:textSize="@dimen/item_intro_label_textsize"
            android:paddingRight="@dimen/edittext_padding_left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/hgl_split"

            app:layout_constraintTop_toBottomOf="@id/view_02"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightgrey"
            android:layout_marginTop="@dimen/intro_splitline"
            android:layout_marginBottom="@dimen/intro_splitline"
            android:id="@+id/view_03"


            app:layout_constraintTop_toBottomOf="@id/tv_intro_time"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_label_rule"
            android:text="打卡规则"
            android:textSize="@dimen/item_intro_label_textsize"
            android:gravity="center_vertical|left"

            android:layout_marginTop="@dimen/item_interval_text"
            android:drawableLeft="@drawable/ic_subtitles_black_24dp"
            android:paddingLeft="@dimen/edittext_padding_left"
            android:drawablePadding="@dimen/edittext_padding_left"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_03"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_intro_rule"
            android:text="打卡规则"
            android:layout_marginTop="@dimen/item_interval_text"

            android:gravity="center_vertical|right"
            android:textSize="@dimen/item_intro_label_textsize"
            android:paddingRight="@dimen/edittext_padding_left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/hgl_split"
            app:layout_constraintTop_toBottomOf="@id/view_03"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>



