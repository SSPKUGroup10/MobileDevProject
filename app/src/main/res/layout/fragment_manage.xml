<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".fragment.ManageFragment">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/hgl_0.05"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.05"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/vgl_0.05"
        android:orientation="vertical"

        app:layout_constraintGuide_percent="0"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/vgl_0.95"
        android:orientation="vertical"

        app:layout_constraintGuide_percent="1"
        />
    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/edittext_height"
        android:gravity="center_vertical|left"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:drawablePadding="10dp"
        android:paddingLeft="@dimen/drawable_padding_left"
        android:paddingRight="@dimen/drawable_padding_right"
        android:background="@color/bgLightYellow"
        android:textSize="@dimen/item_manage_textsize"

        android:layout_marginTop="@dimen/item_interval_text"

        android:text="打卡日历"
        android:id="@+id/tv_manage_calendar"

        app:layout_constraintTop_toBottomOf="@id/hgl_0.05"
        app:layout_constraintLeft_toRightOf="@id/vgl_0.05"
        app:layout_constraintRight_toLeftOf="@id/vgl_0.95"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgrey"
        android:id="@+id/view_manage_01"
        app:layout_constraintTop_toBottomOf="@id/tv_manage_calendar"
        />

    <TextView
        android:layout_width="0dp"
        android:text="打卡状态"
        android:layout_height="@dimen/edittext_height"
        android:gravity="center_vertical|left"

        android:drawableLeft="@drawable/ic_apps_black_24dp"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:drawablePadding="10dp"
        android:paddingLeft="@dimen/drawable_padding_left"
        android:paddingRight="@dimen/drawable_padding_right"
        android:textSize="@dimen/item_manage_textsize"
        android:background="@color/bgLightYellow"

        android:id="@+id/tv_manage_today"

        app:layout_constraintTop_toBottomOf="@id/view_manage_01"
        app:layout_constraintLeft_toRightOf="@id/vgl_0.05"
        app:layout_constraintRight_toLeftOf="@id/vgl_0.95"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgrey"
        android:id="@+id/view_manage_02"
        app:layout_constraintTop_toBottomOf="@id/tv_manage_today"
        />

    <TextView
        android:layout_width="0dp"
        android:text="打卡规则"
        android:layout_height="@dimen/edittext_height"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/drawable_padding_left"
        android:paddingRight="@dimen/drawable_padding_right"
        android:drawableLeft="@drawable/ic_description_black_24dp"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:drawablePadding="10dp"

        android:textSize="@dimen/item_manage_textsize"
        android:background="@color/bgLightYellow"


        android:id="@+id/tv_manage_rule"

        app:layout_constraintTop_toBottomOf="@id/view_manage_02"
        app:layout_constraintLeft_toRightOf="@id/vgl_0.05"
        app:layout_constraintRight_toLeftOf="@id/vgl_0.95"
        />

    <TextView
        android:layout_width="0dp"
        android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
        android:drawablePadding="10dp"

        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/drawable_padding_left"
        android:paddingRight="@dimen/drawable_padding_right"
        android:text="退出圈子"
        android:layout_height="@dimen/edittext_height"

        android:layout_marginTop="@dimen/edittext_margin_top"

        android:textSize="@dimen/item_manage_textsize"
        android:id="@+id/tv_manage_exit"
        android:background="@color/bgLightYellow"

        app:layout_constraintTop_toBottomOf="@id/tv_manage_rule"
        app:layout_constraintLeft_toRightOf="@id/vgl_0.05"
        app:layout_constraintRight_toLeftOf="@id/vgl_0.95"
        />





</androidx.constraintlayout.widget.ConstraintLayout>